<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./assets/index.css" rel="stylesheet" type="text/css">
    <title>Manage posts</title>
</head>

<header>
  <!--sidebar nav-bar-->
  <div id="myNav" class="overlay">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
      <div class="overlay-content">
        <a href="/admin">#</a>
        <a href="/new">Write Post</a>
        <!--The button has to behave as a block element--> 
        <div>
           <button type="button" class="addScript">Inject Script</button>
        </div>
        <button type="button" class="collapsible-btn">Injected Scripts</button>
        <!--arrow bounce
        <div class="arrow bounce">
          <a class="fa fa-arrow-down fa-2x"></a>
        </div>-->
        
        <!--Stored scripts-->
        <div class="collapsible">
          <div class="_injectedScripts">
            <!--scripts to be injected dynamically-->   
        </div>
        </div>
        
      </div>
  </div>

 <div class="toolbar">
   <div class="open_icon" onclick="openNav()">&#9776;</div>
   <span class="blog_icon">
   <img src="./assets/icon.svg" alt="Whatspost" />
   </span>
 </div>

 <div class="popup-input" >
   <input type="text"class="input" placeholder="Insert Script" name="script" required />
   <button type="submit" class="btn_save">Save</button>
   <button class="btn_cancel">Cancel</button>
 </div>
</header>

<body>

    <div class="_allposts">  
        <div class="control-section">
                <label for="search" class="label-search">Search</label>
                <input class="search" id="search"  type="search" />
                <span class="edit">&#10001</span>
                <span class="remove">&#9987</span>  
                <button class="new">New</button>
        </div>
        <% for( var i = 0;i < data.length;i++) { %>
            <div class="_post">
              <label class="custom-checkbox">
                <input type="checkbox" class="checkbox" id="select-<%=i%>"/>
                <span><%= data[i].title %></span>
              </label>
               
                <!-- <label class="c-custom-checkbox">
                  <input type="checkbox" />
                  <svg width="32" height="32" viewBox="-4 -4 39 39" aria-hidden="true" focusable="false">
                    
                    <rect class="checkbox_bg" width="35" height="35" x="-2" y="-2" stroke="currentColor" fill="none" stroke-width="3" rx="6" ry="6"></rect>
                    
                    <polyline class="checkbox_checkmark" points="4,14 2,23 28,5" stroke="transparent" stroke-width="4" fill="none"></polyline>
                  </svg>
                  <span><%= data[i].header %></span>
                </label>-->
               
        </div>
        <% } %>
        
    </div>
</body>
<script src="./assets/sidebarhelper.js"></script>
<script src="./assets/update-deletehelper.js"></script>
<script src="./assets/scriptHandler.js"></script>
</html>