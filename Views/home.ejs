<!DOCTYPE html>
<html lang="US">
    <head>
        <title>Home</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8">
        <meta property="og:url" content="/" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="<%- siteName %>" />
        <meta property="og:site_name" content="<%- siteName %>" />
        <meta property="og:image" content="./assets/1391017.png" />
        <meta property="og:image:alt" content="<%- siteName %>" />
        <meta name="description" content="<%- siteDescription %>" />

        <!--Twitter meta tags-->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@kimdennisb" />
        <meta name="twitter:description" content="<%- siteDescription %>" />
        <meta name="twitter:image" content="./assets/1391017.png" />

        <link href="../assets/index.css" rel="stylesheet" type="text/css" />
        <link rel="icon" type="image/png" href="./assets/1391017.png" />
        <link href="https://fonts.googleapis.com/css?family=ABeeZee" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" /> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        
    </head>
    <body>
      <header class="header-outer">
        <div class="header-inner">
          <div class="header-content responsive-wrapper">

      <!--sidebar navbar-->
      <div id="myNav" class="overlay">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">Ã—</a>
        <div class="overlay-content">
          <div class="nonrestricted-routes">
          <a href="/">#</a>
          <a href="/signin">Sign In</a>
          </div>
          <div class="restricted-routes">
          <a href="/admin">Posts</a>
          <a href="/users">Users</a>
          <a href="/scripts">Scripts</a>  
          <a href="/logout">Logout</a>          
          </div>
        </div>
    </div>

            <!--search Box-->
            <div id="myOverlay" class="overlaySearch">
              <a class="closebtn" onclick="closeSearch()" title="Close Overlay">X</a>
              <div class="overlay-contentSearch">
                <div class="searchContainer">
                   <i class="fa fa-search searchIcon" ></i>
                   <input class="searchBoxPosts" type="search" name="search" placeholder="Search..." />
                </div>
                <div>
                  <ul class="live-search-list">
                  </ul>
                </div>
              </div>
            </div>

            <!--Toolbar-->
            <div class="header-navigation">
              <div class="open_icon" onclick="openNav()">&#9776;</div>
              <img class="blog_icon" src="./assets/icon.svg" alt="<%- siteName %>" />
              <img class="search_icon" src="./assets/search-icon.svg" alt="search icon" onclick="openSearch()" />
            </div>
          </div>
        </div>
</header>
<main class="main">
  <div class="main-content responsive-wrapper">
     <section class="widget">
        <% for(let i=0;i < data.length;i++) { %>
          <div>
           <% if(data[i]._imageFromSearch == 'noImageFound') { %>
            <% const date = data[i].date %>
            <%const year = date.getFullYear() %>
            <%const month = date.getMonth() + 1 %>
            <%const dt = date.getDay() %>
            <% const monthNames = ["January", "February", "March", "April", "May", "June",
            "July", "August", "September", "October", "November", "December"
            ]; %>
            <% const dateNames = ["Sun","Mon","Tue","Wed","Thur","Frid","Sart"]; %>
           
            <div class="article_title onlytext">
              <a href="article/<%= data[i].title.split(' ').join('-') %>" target="_self"><%= data[i].title%> </a>
              <p class="date"> <%- dateNames[dt]+ " " + monthNames[month] + " "+ year %></p>
            </div>
            <% } else { %>
              <% const date = data[i].date %>
              <%const year = date.getFullYear() %>
              <%const month = date.getMonth() + 1 %>
              <%const dt = date.getDay() %>
              <% const monthNames = ["January", "February", "March", "April", "May", "June",
              "July", "August", "September", "October", "November", "December"
              ]; %>
              <% const dateNames = ["Sun","Mon","Tue","Wed","Thur","Frid","Sart"]; %>
            <div class="article_image">
              <img class="image" src="<%= data[i]._imageFromSearch %>"  alt=""/>
            </div>
                  
            <div class="article_title">
              <a href="article/<%= data[i].title.split(' ').join('-') %>" target="_self"><%= data[i].title%> </a>
              <p class="date"> <%- dateNames[dt]+ " " + monthNames[month] + " "+ year %></p>
            </div>
              <% } %>
          </div>
       <% } %>
      </section>
  </div>
</main>
      
      
      <!--Go by pages-->
      <div class="bottom-toolbar">
        <a href="/page/1">MORE &#62</a>
      </div>
    </body>
   <script src="./assets/sidebarhelper.js"></script>
</html>